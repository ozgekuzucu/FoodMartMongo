@model List<FoodMartMongo.Dtos.PeopleViewingDtos.ResultPeopleViewingDto>

@{
    ViewData["Title"] = "PeopleViewingList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Arama Başlıkları</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PeopleViewingId</td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Title</strong></td>
                            <td>
                                <a class="btn btn-outline-success" href="/PeopleViewing/UpdatePeopleViewing/@item.PeopleViewingId"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                            </td>
                            <td>
                                <a class="btn btn-outline-danger" href="/PeopleViewing/DeletePeopleViewing/@item.PeopleViewingId"><i class="bx bx-trash me-1"></i> Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <br />
    <a href="/PeopleViewing/CreatePeopleViewing/" class="btn btn-primary">Yeni Başlık Girişi</a>
</div>
