﻿@using FoodMartMongo.Dtos.FeatureDtos
@model List<ResultFeatureDto>

<div class="banner-ad large bg-info block-1">

    <div class="swiper main-swiper">
        <div class="swiper-wrapper">
            @foreach (var item in Model)
            {
                <div class="swiper-slide">
                    <div class="row banner-content p-5">
                        <div class="content-wrapper col-md-7">
                            <div class="categories my-3">@item.Description</div>
                            <h3 class="display-4">@item.Title</h3>
                            <p>@item.SubTitle</p>
                            <a href="#" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1 px-4 py-3 mt-3">Alışverişe Başla</a>
                        </div>
                        <div class="img-wrapper col-md-5">
                            <img src="@item.ImageUrl" class="img-fluid">
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="swiper-pagination"></div>

    </div>
</div>